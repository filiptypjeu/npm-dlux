    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^17.0.17",
        "@types/ws": "^8.2.2",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.1.0",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.2"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "dlux"
    ]
